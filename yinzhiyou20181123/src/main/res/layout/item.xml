<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_hd"
        android:background="@drawable/ic_launcher_background"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/icon_h"
        app:layout_constraintRight_toLeftOf="@id/image_hd"
        app:layout_constraintTop_toTopOf="@id/image_hd"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/icon_hd"
        app:layout_constraintRight_toLeftOf="@id/icon_h"
        app:layout_constraintTop_toTopOf="@id/image_hd"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_hd"
        app:layout_constraintRight_toLeftOf="@id/icon_hd"
        app:layout_constraintTop_toTopOf="@id/image_hd"/>
</android.support.constraint.ConstraintLayout>